{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,  // or the latest ECMAScript version
    "sourceType": "module",  // for ES modules (import/export)
    "ecmaFeatures": {
      "jsx": true  // enable JSX parsing
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "react-app"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "react/no-children-prop": "warn",
    "semi": ["error", "always"],
    "indent": ["error", 2]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}